<?xml version="1.0" encoding="utf-8"?>
<com.example.myapplication.ZoomLayoutD xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_or">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/imgScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="15dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="15dp"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/Lbtnu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgScroll"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btndisscution"
                android:layout_width="265px"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:background="@drawable/button_bg2"
                android:gravity="center"
                android:text="討論區"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btngroup"
                android:layout_width="265px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:background="@drawable/button_bg2"
                android:gravity="center"
                android:text="揪團去"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Lbtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Lbtnu"
            android:layout_marginTop="10px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMonth"
                android:layout_width="265px"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16px"
                android:layout_marginRight="10px"
                android:background="@drawable/button_bg3"
                android:padding="7px"
                android:text="推薦月份"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnPhone"
                android:layout_width="265px"
                android:layout_height="wrap_content"

                android:layout_marginRight="4dp"
                android:background="@drawable/button_bg3"
                android:padding="7px"
                android:text="連絡電話"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnOpen"
                android:layout_width="265px"
                android:layout_height="wrap_content"

                android:layout_marginRight="4dp"
                android:background="@drawable/button_bg3"
                android:padding="7px"
                android:text="開放時間"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Lbtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Lbtn1"
            android:layout_marginTop="10px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTrans"
                android:layout_width="265px"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/button_bg3"
                android:padding="7px"
                android:text="交通資訊"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnPark"
                android:layout_width="265px"
                android:layout_height="wrap_content"

                android:layout_marginRight="4dp"
                android:background="@drawable/button_bg3"
                android:padding="7px"
                android:text="停車資訊"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnDevice"
                android:layout_width="180px"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/button_bg3"
                android:padding="7px"
                android:text="設施"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnAddress"
                android:layout_width="180px"
                android:layout_height="wrap_content"

                android:layout_marginRight="4dp"
                android:background="@drawable/button_bg3"
                android:padding="7px"
                android:text="地址"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tech"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7FA6ABAE"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="點擊螢幕，介面說明及消失"
                android:textColor="@color/colorInfoText"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="100px"
                android:background="@drawable/ins_color_red"
                android:text="點擊相片可進入放大頁面"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="70px"
                android:background="@drawable/ins_color_red"
                android:text="點擊討論區可進入討論區\n點擊揪團去可進行本景點的揪團"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="450px"
                android:layout_marginTop="320px"
                android:background="@drawable/ins_color_red"
                android:text="點擊您想看的資訊按鍵"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/textScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Lbtn2">

            <com.example.myapplication.ZoomLayoutL
                android:id="@+id/Ltext1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nametextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25sp" />

            </com.example.myapplication.ZoomLayoutL>
        </ScrollView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/AppTheme.ToolBarStyle"
            app:title="" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/drawer" />
</com.example.myapplication.ZoomLayoutD>